.ball-pulse(ng-if="!ctrl.loaded[context]" style="margin: 0 auto 10px auto; width: 65px;")
    div
    div
    div

div
    div(ng-repeat='platform_items in ctrl.getItems(context)')
        div(layout="row" class="platform-games-holder")
            div(class="platform-vertical-logo")
                img(ng-src="{{ platform_items[1][0].game.platform.logo_image_vertical }}" style="height: 100px; position: relative; top: 50%; transform: translateY(-50%);")
            div(class="platform-games" ng-class="{'scrollable': ctrl.scrollable}")
                div(ng-class="{'scrollable-block': ctrl.scrollable}")
                    .game-img-holder.animate(ng-repeat='item in platform_items[1]')
                        img(ng-src='{{item.game.images.front_thumb_medium}}', alt='{{item.game.full_name}}')
                        md-tooltip(md-direction="top") {{item.game.full_name}}
                        em.icon-close.remove-game(ng-click="ctrl.removeGameFrom(item.id, platform_items[0], context)")
            div(style="clear: both;")
        div(style="clear: both;")
    div(style="clear: both;")

form(ng-submit="ctrl.addGameTo(context)")
    md-autocomplete(ng-disabled='ctrl.isDisabled', md-selected-item-change="ctrl.addGameTo(context)", md-no-cache='ctrl.noCache', md-selected-item='ctrl.selectedItem', md-search-text='ctrl.searchText', md-items='item in ctrl.querySearch(ctrl.searchText, context)', md-item-text='item.display', placeholder='Add more games...', md-min-length="3", md-delay="500", md-autoselect="true")
        span(md-highlight-text='ctrl.searchText') {{item.display}}
